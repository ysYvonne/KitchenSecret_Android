<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meetyouatnowhere.kitchensecret_android.activities.PersonSpaceFragment"
    tools:showIn="@layout/fragment_person_space"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:visibility="visible"
        android:touchscreenBlocksFocus="true"
        android:id="@+id/scrollView6" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="570dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/large_text"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="0.28">


                    <ImageButton
                        android:id="@+id/myRecipe1_btn"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="9dp"
                        android:background="@mipmap/food1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView" />

                    <ImageButton
                        android:id="@+id/myRecipe2_btn"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="9dp"
                        android:background="@mipmap/food2" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="0.71">


                    <ImageButton
                        android:id="@+id/myRecipe3_btn"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="9dp"
                        android:background="@mipmap/food3" />

                    <ImageButton
                        android:id="@+id/add_recipe_btn"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="9dp"
                        android:background="@mipmap/add_recipe_btn" />





                </TableRow>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
