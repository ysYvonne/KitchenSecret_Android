<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.meetyouatnowhere.kitchensecret_android.activities.SearchFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:background="@android:drawable/editbox_background" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:id="@+id/history_lView"
        android:layout_weight="0.34" />

    <TextView
        android:id="@+id/maylike_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="可能喜欢"
        android:layout_weight="0.05"
        android:textColor="#1a1919"
        android:textSize="@dimen/text_large"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.58">


        <Button
            android:id="@+id/maylike1_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="9dp"
            android:background="@color/design_fab_shadow_mid_color"
            android:text="低卡路里" />

        <Button
            android:id="@+id/maylike2_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="9dp"
            android:background="@color/design_fab_shadow_mid_color"
            android:text="快手菜" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0.71">


        <Button
            android:id="@+id/maylike3_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="9dp"
            android:background="@color/design_fab_shadow_mid_color"
            android:text="鸡肉" />

        <Button
            android:id="@+id/maylike4_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="9dp"
            android:background="@color/design_fab_shadow_mid_color"
            android:text="沙拉" />

    </TableRow>

</LinearLayout>
